{% extends 'baseadmin.html.twig' %}

{% block title 'Gestions des espaces' %}

{% block body %}
<div class='container mt-4'>

<h2> Gérer les textes de présentation des espaces </h2>
<table class ="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for espaces in lesespaces %}
        <tr>
            <td>{{ espaces.tittle }}</td>
            <td>
                <a href="{{ path('admin.espaces.edit',{id: espaces.id}) }}" class="btn btn-secondary">Editer</a>
                
                <form method="post" action="{{ path('admin.espaces.delete',{ id: espaces.id}) }}"  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')" style="display: inline-block">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ espaces.id) }}"/>
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </td>

        </tr>
        {% endfor %}
    </tbody>
</table>
<div class ="text-right">
    <a href="{{path('admin.espaces.new')}}" class="btn btn-secondary">Ajouter un espace d'atelier</a>
</div>
</div>




{% endblock %}